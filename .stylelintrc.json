{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recommended-less"
  ],
  "plugins": [
    "stylelint-less"
  ],
  "rules": {
    "at-rule-no-unknown": null,
    "color-no-invalid-hex": true,
    "less/color-no-invalid-hex": true,
    "selector-class-pattern": "^[a-zA-Z0-9_-]+$"
  },
  "ignoreFiles": [
    "dist/*",
    "temp/*"
  ]
}
